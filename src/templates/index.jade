doctype html
html
	head
		- var page_name = "Temp"
		include ./includes/head.jade

	body(ng-app="todoListApp")
		include ./includes/header.jade

		main
			.list(ng-controller="mainCtrl")
				h1 My TODOs
				.list(ng-controller='mainCtrl')
					.add
						a(href='', ng-click='addTodo()') Add new
					.item(ng-class="{'editing-item':editing,'edited':todo.edited, 'complete': todo.completed}", ng-init="todo.completed = false" ng-repeat="todo in todos | orderBy : 'completed' ")
						input(ng-model='todo.completed', type='checkbox')
						label.editing-lable(ng-hide='editing') {{todo.name}}
						input.editing-lable(ng-change='todo.edited = true;', ng-focus='editing=true;', ng-blur='editing=false', ng-show='editing', ng-model='todo.name', type='text')
						.actions
							a(href='', ng-click=' editing = !editing') edit 
							a(href='', ng-click='saveTodo(todo,$index)') save 
							a.delete(href='', ng-click='deleteTodo(todo,$index)') delete 
								//- {{todos}}
			div(ng-controller="iAmASibling")
				{{foobar}}

		include ./includes/footer.jade